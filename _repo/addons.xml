<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.program.ycbeast" name="[COLOR dodgerblue]YCBeast[/COLOR] Wizard" version="0.1.2" provider-name="@ForTheJest">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="startup.py" start="startup" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">YCBeast Wizard</summary>
    <description lang="en">YCBeast Wizard allows you to get access to the latest YCBeast Custom Builds.</description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="repository.ycbeast" name="[COLOR dodgerblue]YCBeast[/COLOR] Repo" version="0.0.1" provider-name="@ForTheJest">
	<extension point="xbmc.addon.repository" name="YCBeast Repo">
		<info compressed="false">http://ycrepo.info/ycbeast/repo/addons.xml</info>
		<checksum>http://ycrepo.info/ycbeast/repo/addons.xml.md5</checksum>
		<datadir zip="true">http://ycrepo.info/ycbeast/repo/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>YCBeast Repository</summary>
		<description>Home of the YCBeast Wizard</description>
		<platform>all</platform>
	</extension>
</addon>
</addons>
